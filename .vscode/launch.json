{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run codeceptjs",
      "program": "${workspaceFolder}/node_modules/codeceptjs/bin/codecept.js",
      "args": ["run", "--verbose"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Specific Test File",
      "program": "${workspaceFolder}/node_modules/codeceptjs/bin/codecept.js",
      "args": ["run", "tests/example_api_test.js", "--verbose"],
      "cwd": "${workspaceFolder}"
    }
  ]
}
